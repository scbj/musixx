<Application
    x:Class="Musixx.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Musixx"
    xmlns:converters="using:Musixx.Converters"
    RequestedTheme="Light">

    <Application.Resources>
        <ResourceDictionary>
            <converters:NullableBoolToLoginStateConverter x:Key="NullableBoolToLoginStateConverter"/>
            <converters:NullableBoolToVisibilityConverter x:Key="NullableBoolToVisibilityConverter"/>
            <converters:TimeSpanFormatConverter x:Key="TimeSpanFormatConverter"/>
            <converters:TimeSpanToDoubleConverter x:Key="TimeSpanToDoubleConverter"/>
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
            <converters:BoolToPlayPauseConverter x:Key="BoolToPlayPauseConverter"/>
            <converters:SecondFormatConverter x:Key="SecondFormatConverter"/>
        </ResourceDictionary>
    </Application.Resources>

</Application>
